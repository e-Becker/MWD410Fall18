extends layout

block content
  .wrapper.row0
    #topbar.hoc.clear
  .wrapper.row1
    header#header.hoc.clear
      #logo.fl_left
        h1
          a(href='about') Welcome to Iris
  .wrapper.row2
    nav#mainav.hoc.clear
      ul.clear
        li.active
          a(href='about') Home
        if !currentUser
          li
            a.nav-item.nav-link(href='register') Sign Up
        li
          a(href='profile') My Library
        li
          a(href='contact') Contact
        if currentUser
          div(style='margin-top: .75rem;')        
            h5
              img.avatar.img-circle(src='/images/avatar.png', alt='avatar')
              | #{name}
              a.btn.btn-light.pull-md-right(href='/logout') Log out
        else  
          a.btn.btn-info.pull-md-right(href='login') Login

        
  .wrapper.bgded.overlay(style="background-image:url('images/cbp/backgrounds/poly.jpg');")
    #pageintro.hoc.clear
      article.introtxt
        h2.heading Log In
        form(method='POST' action='/login')
          div.form-group
            label(for='email', style='text-shadow: 2px 2px #000;') Email
            input.form-control(type='text' id='email' placeholder='email' name='email')
          div.form-group
            label(for='password', style='text-shadow: 2px 2px #000;') Password
            input.form-control(type='password' id='password' placeholder='password' name='password')
          button.btn.btn-primary(type='submit') Log in        
