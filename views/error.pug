extends layout

block content
  .wrapper.row1
    header#header.hoc.clear
      #logo.fl_left
        h1
          a(href='about') Welcome to Iris
  .wrapper.row2
    .override
      nav#mainav.hoc.clear
        ul.clear
          li.active
            a(href='about') Home
          if !currentUser
            li
              a.nav-item.nav-link(href='register') Sign Up
          li
            a(href='profile') My Library
          li
            a(href='contact') Contact
          if currentUser
            div()        
              h5
                img.avatar.img-circle(src='/images/avatar.png', style='margin-top: .75rem;', alt='avatar')
                | #{name}
                a.btn.btn-light.pull-md-right(href='/logout') Log out
          else  
            a.btn.btn-info.pull-md-right(href='login') Login

        
  .wrapper.bgded.overlay(style="background-image:url('images/cbp/backgrounds/poly.jpg');")
    #pageintro.hoc.clear
      article.introtxt
        h2.heading
        i.icn-person.material-icons(style='text-shadow: 2px 2px #000;') error
        p.lead.m-t-2(style='text-shadow: 2px 2px #000;')= message 
